{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:sonarjs/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "requireConfigFile": false
  },
  "ignorePatterns": ["docs", "output"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.json"],
      "rules": {
        "semi": "off"
      }
    }
  ]
}
